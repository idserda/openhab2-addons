<?xml version="1.0" encoding="UTF-8"?>
<binding:binding id="untappd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:binding="http://eclipse.org/smarthome/schemas/binding/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/binding/v1.0.0 http://eclipse.org/smarthome/schemas/binding-1.0.0.xsd">

    <name>Untappd Binding</name>
    <description>This is the binding for Untappd.</description>
    <author>Jeroen Idserda</author>
    
    <config-description>
        <parameter name="clientid" type="text">
            <label>Client ID</label>
            <description>Untappd Application Client ID</description>
            <required>true</required>
        </parameter>
        <parameter name="clientsecret" type="text">
            <label>Client Secret</label>
            <description>Untappd Application Client Secret</description>
            <required>true</required>
        </parameter>
    </config-description>

</binding:binding>
