<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="untappd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <thing-type id="checkin">
        <label>Last Untappd Check-in</label>
        <description>Last Check-in from your friends on Untappd</description>

        <channels>
            <channel id="beer_name" typeId="beerNameType"/>
            <channel id="beer_label" typeId="beerLabelType"/>
            <channel id="user" typeId="userType"/>
            <channel id="last_color" typeId="last_color"/>
            <channel id="last_color_bright" typeId="last_color_bright"/>
            <channel id="date_time" typeId="dateTimeType"/>

            <channel id="checkin" typeId="newCheckinType"/>
            <channel id="toast" typeId="newToastType"/>
            <channel id="toast_user" typeId="toastUserType"/>
        </channels>
        
        <config-description>
	        <parameter name="access_token" type="text" required="true">
	            <label>Access token</label>
	            <description>Access token</description>
	        </parameter>
	        <parameter name="filter_self" type="boolean" required="false">
                <label>Show your own checkins in timeline</label>
                <description>Filter your own checkin from the timeline</description>
            </parameter>
        </config-description>
    </thing-type>
    
     <channel-type id="beerNameType">
        <item-type>String</item-type>
        <label>Beer name</label>
        <description>Name of the beer of last checkin</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="beerLabelType">
        <item-type>String</item-type>
        <label>Beer label</label>
        <description>Beer label</description>
        <state readOnly="true"></state>
    </channel-type>
    
     <channel-type id="userType">
        <item-type>String</item-type>
        <label>Username</label>
        <description>Name of user of last checkin</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="last_color">
        <item-type>Color</item-type>
        <label>Color of last checkin</label>
        <description>Color of last checkin</description>
        <state readOnly="true"></state>
    </channel-type>
    
     <channel-type id="last_color_bright">
        <item-type>Color</item-type>
        <label>Bright color of last checkin</label>
        <description>Bright color of last checkin</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="dateTimeType">
        <item-type>DateTime</item-type>
        <label>Date</label>
        <description>Date time last checkin</description>
        <category>Date</category>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="toastUserType">
        <item-type>String</item-type>
        <label>User toast name</label>
        <description>Name of the user of the last toast</description>
        <state readOnly="true"></state>
    </channel-type>
    
    <channel-type id="newCheckinType">
        <kind>trigger</kind>
        <label>New Check-in</label>
    </channel-type>
    
    <channel-type id="newToastType">
        <kind>trigger</kind>
        <label>New toast</label>
    </channel-type>

</thing:thing-descriptions>
